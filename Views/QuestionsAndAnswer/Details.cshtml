@using Microsoft.AspNetCore.Identity
@model QandAn.Models.Question
@inject SignInManager<QandAn.Areas.Identity.Pages.Account.RegisterModel.AlinUser> SignInManager


@{
     ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4> @Html.DisplayFor(model => model.QuestionTitle)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionCreateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionCreateTime)
        </dd>
    </dl>
</div>
<div>
    @if(SignInManager.IsSignedIn(User))
    {
       <a asp-action="Edit" asp-route-id="@Model.ID" >Edit</a> 
    }
    <br>
    <a asp-action="Index">Back to List</a>
</div>
<div class="CreateAnswer">
    <form asp-action="CreateAnswer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input type="hidden" value="@Model.ID" name="questionId" />
                    <input name="AnswerContent" class="form-control" placeholder="Только для зарегистрированных пользователей"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Answer" class="btn btn-outline-warning" />
                </div>
    </form>
</div>
<nav aria-label="breadcrumb">
<div id= "list-example" class="list">
    @foreach (var ans in Model.Answers)
    {    
        <ol class="breadcrumb">
            @ans.User<br>
            @ans.AnswerTime 
            &nbsp
            <li class="breadcrumb-item active" aria-current="page"><h5>@ans.AnswerContent</h5></li>
       
        @if(User.IsInRole("Admin"))
        {
            <a class="btn btn-warning btn-sm" style="display: block; margin-left:auto; " asp-action="DeleteAnswer" asp-route-id="@ans.ID" ><b>Delete</b></a>
        }
        </ol>
    }
</div>
</nav>
