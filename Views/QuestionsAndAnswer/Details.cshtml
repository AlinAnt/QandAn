@model QandAn.Models.Question


@{
     ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4> @Html.DisplayFor(model => model.QuestionTitle)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionCreateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionCreateTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" >Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>
<div class="CreateAnswer">
    <form asp-action="CreateAnswer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input type="hidden" value="@Model.ID" name="questionId" />
                    <input name="AnswerContent" class="form-control"/>
                    <span  class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Answer" class="btn btn-primary" />
                </div>
    </form>
</div>
<div>
    <table>
    @foreach (var ans in Model.Answers)
    {
        <tr>
            <th>@ans.AnswerContent</th>
            
        </tr>
                
    }
    </table>
</div>
