@using Microsoft.AspNetCore.Identity
@inject SignInManager<QandAn.Areas.Identity.Pages.Account.RegisterModel.ApplicationUser> SignInManager
@inject UserManager<QandAn.Areas.Identity.Pages.Account.RegisterModel.ApplicationUser> UserManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
    <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity.Name! </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-outline-warning">Logout</button>
        </form>
    </li>
}
else
{
    <div class="btn - toolbar">
    <span class="badge badge-warning"> 
   
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    </span>
    
    <span class="badge badge-warning"> 
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    </span> 
    </div>
}
</ul>