@model IEnumerable<QandAn.Models.Question>

@{
    ViewData["Title"] = "Question List";
}

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Title: <input type="text" name="SearchString" value="@ViewData["Filter"]" />
            <input type="submit" value="Search" class="btn btn-info" />
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionTitle)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.QuestionCreateTime)
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionCreateTime)
            </td>

            <td>
                <a asp-action="Index" asp-controller="Question" asp-route-id="@item.ID">Details</a>
                @if (item.User.Email == User.Identity.Name)
                {
                    <a asp-action="Edit" asp-controller="Question" asp-route-id="@item.ID">Edit</a> 
                    <a asp-action="Delete" asp-controller="QuestionList" asp-route-id="@item.ID">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
